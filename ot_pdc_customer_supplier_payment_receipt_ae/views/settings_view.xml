<?xml version="1.0" ?>
<odoo>
    <record id="inherited_vew_company_form_pdc_ae" model="ir.ui.view">
        <field name="name">inherited.vew.company.form.pdc.ae</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="checks_notification_days"/>
                <field name="default_checks_under_collection_journal_id"/>
            </field>
        </field>
    </record>
    <!-- banks view for cheques -->
    <record id="view_bank_pdc_ae" model="ir.ui.view">
        <field name="name">view.bank.pdc.ae</field>
        <field name="model">bank.bank</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- bank action -->
    <record model="ir.actions.act_window" id="action_bank_pdc_ae">
        <field name="name">Banks</field>
        <field name="res_model">bank.bank</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- bank menu -->
    <menuitem id="menu_banks" name="Banks" parent="account.account_account_menu" action="action_bank_pdc_ae"/>
</odoo>
