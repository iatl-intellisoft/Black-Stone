<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_check">
            <t t-call="web.html_container">
                <!-- This report is (obviously) a work in progress -->
                <div class="page ">
                    <div class="row mt23 mb32" style="padding-top:58px;">
                        <span dir="rtl">
                            <h4 style="padding-right:25px;padding-top:8px;">
                                <span t-esc="docs.check_due_date"/>
                            </h4>
                        </span>
                        <span dir="rtl">
                            <h4 t-if="docs.customer_vendor" style="padding-right:50px; padding-top:0px;">
                                <span t-esc="docs.customer_vendor"/>
                            </h4>
                            <h4 t-else="" style="padding-right:50px; padding-top:0px;">
                                <span t-esc="docs.partner_id.name"/>
                            </h4>
                        </span>
                        <t t-if="len(docs.amount_in_word_length2()) == 0">
                            <span dir="rtl">
                                <h4 style="padding-right:50px;padding-top:0px;">
                                    <span t-esc="docs.amount_in_word_length1()"/>
                                </h4>
                            </span>
                            <span dir="rtl ">
                                <h4 style="padding-right:50px; padding-top:40px;">
                                    <span t-esc="docs.convert(docs.amount)"/>
                                </h4>
                            </span>
                        </t>
                        <t t-if="len(docs.amount_in_word_length2()) != 0">
                            <span dir="rtl">
                                <h4 style="padding-right:50px;padding-top:0px;">
                                    <span t-esc="docs.amount_in_word_length1()"/>
                                </h4>
                            </span>
                            <span dir="rtl">
                                <h4 style="padding-right:50px; padding-top:0px;">
                                    <span t-esc="docs.amount_in_word_length2()"/>
                                </h4>
                            </span>
                            <span dir="rtl ">
                                <h4 style="padding-right:55px; padding-top:10px;">
                                    <span t-esc="docs.convert(docs.amount)"/>
                                </h4>
                            </span>
                        </t>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>


