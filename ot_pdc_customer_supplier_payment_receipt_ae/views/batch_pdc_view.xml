<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--batch PDCs form view -->
        <record model="ir.ui.view" id="view_batch_pdc_form">
            <field name="name">view.batch.pdc.form</field>
            <field name="model">batch.pdc</field>
            <field name="arch" type="xml">
                <form string="Batch PDCs">
                    <header>
                        <button string="Reset to Draft" name="reset" type="object"
                                confirm="Are you sure you want to do this? It is your responsibility to resolve any issues caused by your action."
                                attrs="{'invisible': [('state','=','draft')]}"/>
                        <button name="generate_payments" type="object" string="Generate Payments" class="oe_highlight"
                                attrs="{'invisible': [('state','!=','draft')]}"/>
                        <button name="generate_checks" type="object" icon="fa-gear" string="Add Cheques"
                                attrs="{'invisible': [('generated_checks','=',True)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <separator string="Batch PDCs Info"/>
                        <group>
                            <group>
                                <field name="generated_checks" invisible="1"/>
                                <field name="name"/>
                                <field name="partner" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="payment_date" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="payment_amount" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="no_of_checks" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="check_start_from_no" attrs="{'readonly': [('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="check_start_from_date" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="check_bank_name" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="check_bank_branch" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="so_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="total"/>
                                <field name="check_amount_in_words"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cheque Details">
                                <field name="batch_pdc_detail_ids" attrs="{'readonly': [('state','!=','draft')]}" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="sequence"/>
                                        <field name="check_no"/>
                                        <field name="payment_amount" sum="Total"/>
                                        <field name="check_due_date"/>
                                        <field name="payment_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--batch PDCs tree view -->
        <record model="ir.ui.view" id="view_batch_pdc_tree">
            <field name="name">view.batch.pdc.tree</field>
            <field name="model">batch.pdc</field>
            <field name="arch" type="xml">
                <tree string="Batch PDCs">
                    <field name="name"/>
                    <field name="partner"/>
                    <field name="payment_date"/>
                    <field name="total"/>
                    <field name="no_of_checks"/>
                    <field name="check_start_from_no"/>
                    <field name="check_start_from_date"/>
                    <field name="check_bank_name"/>
                    <field name="check_bank_branch"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- batch PDCs search view -->
        <record id="view_batch_pdc_search" model="ir.ui.view">
            <field name="name">view.batch.pdc.search</field>
            <field name="model">batch.pdc</field>
            <field name="arch" type="xml">
                <search string="Batch PDCs">
                    <field name="name"/>
                    <field name="partner"/>
                    <field name="payment_date"/>
                    <field name="payment_amount"/>
                    <field name="no_of_checks"/>
                    <field name="check_start_from_no"/>
                    <field name="check_start_from_date"/>
                    <field name="check_bank_name"/>
                    <field name="check_bank_branch"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_state" string="State" context="{'group_by':'state'}"/>
                        <filter name="group_by_date" string="Payment Date" context="{'group_by':'payment_date'}"/>
                        <filter name="group_by_check_bank_name" string="Check Bank Name"
                                context="{'group_by':'check_bank_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--batch PDCs action -->
        <record id="action_receive_batch_pdc" model="ir.actions.act_window">
            <field name="name">Receive Batch PDCs</field>
            <field name="res_model">batch.pdc</field>
        <!-- <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <!--batch PDCs menu item -->
        <menuitem id="batch_pdc_cheques"
                  name="Receive Batch PDCs"
                  parent="account.menu_finance_receivables"
                  action="action_receive_batch_pdc"/>
    </data>
</odoo>