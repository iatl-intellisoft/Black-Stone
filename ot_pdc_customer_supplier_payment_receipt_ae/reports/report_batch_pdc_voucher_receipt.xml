<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_batch_pdc_voucher_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure">
                            <div class="row row-centered">
                                <div class="col-md-12 col-centered">
                                    <group string="Voucher Receipt">
                                        <table class="table">
                                            <tr class="text-center">
                                                <td colspan="12" style="border: none;">
                                                    <h3>
                                                        <u>
                                                            <strong>Batch Cheques Receipt Voucher / إيصال إستلام دفعية
                                                                شيكات
                                                            </strong>
                                                        </u>
                                                    </h3>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border: none;">
                                                    <h4>
                                                        <strong>Voucher Details / تفاصيل الايصال:</strong>
                                                    </h4>
                                                </td>
                                                <td style="border: none;" class="text-center">
                                                    <h4>
                                                        <span t-field="o.name"/>
                                                    </h4>
                                                </td>
                                                <td style="border: none;">
                                                </td>
                                                <td style="border: none;">
                                                    <h4>
                                                        <strong>Voucher Date / تاريخ اﻹيصال:</strong>
                                                    </h4>
                                                </td>
                                                <td style="border: none;" class="text-right">
                                                    <h4>
                                                        <span t-field="o.payment_date"/>
                                                    </h4>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="5" style="border: none; border-bottom: 1px solid black;">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border: none;">
                                                    <h4>
                                                        <strong>Received From Mr./Ms.:</strong>
                                                    </h4>
                                                </td>
                                                <td colspan="3"
                                                    style="border: none; border-bottom: 1px dotted black;"
                                                    class="text-center">
                                                    <h4>
                                                        <span t-field="o.partner"/>
                                                    </h4>
                                                </td>
                                                <td style="border: none;" class="text-right">
                                                    <h4>
                                                        <strong>:وصلنا من السيد/السادة</strong>
                                                    </h4>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border: none;">
                                                    <h4>
                                                        <strong>Amount:</strong>
                                                    </h4>
                                                </td>
                                                <td colspan="3"
                                                    style="border: none; border-bottom: 1px dotted black;"
                                                    class="text-center">
                                                    <h4>
                                                        <strong>
                                                            <b>
                                                                <span t-esc="o.currency_id.symbol"/>
                                                                <span>&#160;</span>
                                                            </b>
                                                            <t t-esc="'{0:,.2f}'.format(o.total)"/>
                                                        </strong>
                                                    </h4>
                                                </td>
                                                <td style="border: none;" class="text-right">
                                                    <h4>
                                                        <strong>:المبلغ</strong>
                                                    </h4>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border: none;">
                                                    <h4>
                                                        <strong>The amount of:</strong>
                                                    </h4>
                                                </td>
                                                <td colspan="3"
                                                    style="border: none; border-bottom: 1px dotted black;"
                                                    class="text-center">
                                                    <h4>
                                                        <span t-field="o.check_amount_in_words"/>
                                                    </h4>
                                                </td>
                                                <td style="border: none;" class="text-right">
                                                    <h4>
                                                        <strong>:المبلغ كتابة</strong>
                                                    </h4>
                                                </td>
                                            </tr>
                                            <t>
                                                <tr t-if="o.check_bank_name">
                                                    <td style="border: none;">
                                                        <h4>
                                                            <strong>On Bank:</strong>
                                                        </h4>
                                                    </td>
                                                    <td colspan="3" class="text-center"
                                                        style="border: none; border-bottom: 1px dotted black;">
                                                        <h4>
                                                            <span t-field="o.check_bank_name"/>
                                                        </h4>
                                                    </td>
                                                    <td style="border: none;" class="text-right">
                                                        <h4>
                                                            <strong>:على بنك</strong>
                                                        </h4>
                                                    </td>
                                                </tr>
                                                <tr t-if="o.check_bank_branch">
                                                    <td style="border: none;">
                                                        <h4>
                                                            <strong>Branch:</strong>
                                                        </h4>
                                                    </td>
                                                    <td colspan="3" class="text-center"
                                                        style="border: none; border-bottom: 1px dotted black;">
                                                        <h4>
                                                            <span t-field="o.check_bank_branch"/>
                                                        </h4>
                                                    </td>
                                                    <td style="border: none;" class="text-right">
                                                        <h4>
                                                            <strong>:فرع</strong>
                                                        </h4>
                                                    </td>
                                                </tr>
                                                <tr t-if="o.total">
                                                    <td style="border: none;">
                                                        <h4>
                                                            <strong>Total:</strong>
                                                        </h4>
                                                    </td>
                                                    <td colspan="3" class="text-center"
                                                        style="border: none; border-bottom: 1px dotted black;">
                                                        <h4>
                                                            <span t-field="o.total"/>
                                                        </h4>
                                                    </td>
                                                    <td style="border: none;" class="text-right">
                                                        <h4>
                                                            <strong>:المجموع</strong>
                                                        </h4>
                                                    </td>
                                                </tr>
                                                <tr t-if="o.check_amount_in_words">
                                                    <td style="border: none;">
                                                        <h4>
                                                            <strong>Amount in Words:</strong>
                                                        </h4>
                                                    </td>
                                                    <td colspan="3" class="text-center"
                                                        style="border: none; border-bottom: 1px dotted black;">
                                                        <h4>
                                                            <span t-field="o.check_amount_in_words"/>
                                                        </h4>
                                                    </td>
                                                    <td style="border: none;" class="text-right">
                                                        <h4>
                                                            <strong>:المبلغ كتابة</strong>
                                                        </h4>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left"
                                                        style="border: none; border-bottom: 1px dotted black;">
                                                        <h5>
                                                            <strong>#</strong>
                                                        </h5>
                                                    </td>
                                                    <td class="text-left"
                                                        style="border: none; border-bottom: 1px dotted black;">
                                                        <h5>
                                                            <strong>Cheque No. / رقم الشيك</strong>
                                                        </h5>
                                                    </td>
                                                    <td class="text-left"
                                                        style="border: none; border-bottom: 1px dotted black;"
                                                        colspan="2">
                                                        <h5>
                                                            <strong>Cheque Date / تاريخ الشيك</strong>
                                                        </h5>
                                                    </td>
                                                    <td class="text-left"
                                                        style="border: none; border-bottom: 1px dotted black;">
                                                        <h5>
                                                            <strong>Amount / المبلغ</strong>
                                                        </h5>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <t t-foreach="o.batch_pdc_detail_ids" t-as="m">
                                                        <tr>
                                                            <td style="border: 1 px solid black;">
                                                                <span t-field="m.sequence"/>
                                                            </td>
                                                            <td style="border: 1 px solid black;">
                                                                <span t-field="m.check_no"/>
                                                            </td>
                                                            <td style="border: 1 px solid black;" colspan="2">
                                                                <span t-field="m.check_due_date"/>
                                                            </td>
                                                            <td style="border: 1 px solid black;">
                                                                <span t-field="m.payment_amount"/>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tr>
                                            </t>
                                            <!-- signature area-->
                                            <div class="col-xs-12">
                                                <table>
                                                    <tr style="height: 50px;">
                                                    </tr>
                                                    <tr>
                                                        <td class="col-xs-3 text-left"
                                                            style="border: none;">
                                                            <h4>
                                                                <strong>Accountant / المحاسب:</strong>
                                                            </h4>
                                                        </td>
                                                        <td class="col-xs-3 text-center"
                                                            style="border: none; border-bottom: 1px dotted black">
                                                            <h4>
                                                                <strong>
                                                                    <span t-esc="user.name"/>
                                                                </strong>
                                                            </h4>
                                                        </td>
                                                        <td class="col-xs-1 text-center"
                                                            style="border: none;"></td>
                                                        <td class="col-xs-3 text-center"
                                                            style="border: none;">
                                                            <h4>
                                                                <strong>Signature / التوقيع:</strong>
                                                            </h4>
                                                        </td>
                                                        <td class="col-xs-3 text-center"
                                                            style="border-bottom: 1px dotted black">
                                                        </td>
                                                    </tr>
                                                    <tr style="height: 50px;">
                                                    </tr>
                                                    <tr>
                                                        <td class="col-xs-3 text-left"
                                                            style="border: none;">
                                                            <h4>
                                                                <strong>Payer / الدافع:</strong>
                                                            </h4>
                                                        </td>
                                                        <td class="col-xs-3 text-center"
                                                            style="border: none; border-bottom: 1px dotted black">
                                                            <h4>
                                                                <strong>
                                                                    <span t-esc="o.partner.name"/>
                                                                </strong>
                                                            </h4>
                                                        </td>
                                                        <td class="col-xs-1 text-center"
                                                            style="border: none;"></td>
                                                        <td class="col-xs-3 text-center"
                                                            style="border: none;">
                                                            <h4>
                                                                <strong>Signature / التوقيع:</strong>
                                                            </h4>
                                                        </td>
                                                        <td class="col-xs-3 text-center"
                                                            style="border-bottom: 1px dotted black">
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </table>
                                    </group>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>