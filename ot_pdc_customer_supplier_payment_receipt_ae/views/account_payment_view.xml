                </field>
            </field>
        </record> -->

        <!-- enhancing search view -->
        <record id="inherited_view_account_payment_search_payment_receipt_report" model="ir.ui.view">
            <field name="name">inherited.view.account.payment.search.payment.receipt.report</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <!-- adding date from, to -->
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="date_from" filter_domain="[('date','&gt;=',self)]"/>
                    <field name="date_to" filter_domain="[('date','&lt;=',self)]"/>
                </xpath>
                <!-- add pdc for customer checks -->
                <xpath expr="//filter[@name='transfers_filter']" position="after">
                    <filter string="Customer Checks" name="customer_checks"
                            domain="[('payment_method_id.code', '=', 'receivable_check'), ('state','=','posted')]"/>
                    <filter name="by_today" string="Checks Due Today"
                            domain="[('check_due_date','=',time.strftime('%%Y-%%m-%%d'))]"/>
                </xpath>
                <!-- add a group by for due date -->
                <xpath expr="//filter[@name='partner']" position="after">
                    <filter string="Check Due Date" name="checks_date_group" domain="[]"
                            context="{'group_by':'check_due_date'}"/>
                </xpath>
            </field>
        </record>
        <record id="inherited_account_check_printing_view_payment_check_printing_search_payment_receipt_report"
                model="ir.ui.view">
            <field name="name">
                inherited.account.check.printing.view.payment.check.printing.search.payment.receipt.report
            </field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account_check_printing.view_payment_check_printing_search"/>
            <field name="arch" type="xml">
                <!-- changing filter string -->
                <xpath expr="//filter[@name='checks_to_send']" position="replace">
                    <filter string="Vendor Checks"
                            domain="[('payment_method_id.code', '=', 'check_printing'), ('state','=','posted')]"
                            name="checks_to_send"/>
                </xpath>
                <!-- show bounced checks -->
                <xpath expr="//filter[@name='checks_to_send']" position="after">
                    <filter string="Bounced Checks"
                            domain="[('check_bounced', '=', True)]"
                            name="checks_bounced"/>
                </xpath>
            </field>
        </record>

        <!-- customize payment tree view to add check due date -->
        <record id="inherited_account_view_account_payment_tree_payment_receipt_report" model="ir.ui.view">
            <field name="name">inherited.account.view_account.payment.tree.payment.receipt.report</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <!-- add check due date -->
                <field name="payment_method_line_id" position="after">
                    <field name="check_due_date"/>
                </field>
                <!-- add check cleared and bounced views -->
                <field name="state" position="after">
                    <field name="check_cleared"/>
                    <field name="check_bounced"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
