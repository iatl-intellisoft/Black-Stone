<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="second_currency_profit_and_loss" model="account.report">
        <field name="name">Second Currency Profit and Loss</field>
        <field name="filter_analytic_groupby" eval="True"/>
        <field name="filter_unfold_all" eval="True"/>
        <field name="filter_journals" eval="True"/>
        <field name="filter_multi_company">selector</field>
        <field name="default_opening_date_filter">this_year</field>
        <field name="column_ids">
            <record id="profit_and_loss_sc_column" model="account.report.column">
                <field name="name">Second Currency Balance</field>
                <field name="expression_label">second_currency_balance</field>
            </record>
        </field>
        <field name="line_ids">
            <record id="account_financial_report_sc_net_profit0" model="account.report.line">
                <field name="name">Net Profit</field>
                <field name="code">NEPSC</field>
                <field name="expression_ids">
                    <record id="account_financial_report_sc_net_profit0_balance" model="account.report.expression">
                        <field name="label">second_currency_balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">OPINCSC.second_currency_balance + OINSC.second_currency_balance - COSSC.second_currency_balance - EXPSC.second_currency_balance - DEPSC.second_currency_balance</field>
                        <field name="date_scope">normal</field>
                    </record>
                </field>
            </record>
            <record id="account_financial_report_sc_totalincome0" model="account.report.line">
                <field name="name">Income</field>
                <field name="code">INCSC</field>
                <field name="expression_ids">
                    <record id="account_financial_report_sc_totalincome0_balance" model="account.report.expression">
                        <field name="label">second_currency_balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">OPINCSC.second_currency_balance + OINSC.second_currency_balance</field>
                        <field name="date_scope">normal</field>
                    </record>
                </field>
                <field name="children_ids">
                    <record id="account_financial_report_sc_gross_profit0" model="account.report.line">
                        <field name="name">Gross Profit</field>
                        <field name="code">GRPSC</field>
                        <field name="expression_ids">
                            <record id="account_financial_report_sc_gross_profit0_balance" model="account.report.expression">
                                <field name="label">second_currency_balance</field>
                                <field name="engine">aggregation</field>
                                <field name="formula">OPINCSC.second_currency_balance - COSSC.second_currency_balance</field>
                                <field name="date_scope">normal</field>
                            </record>
                        </field>
                        <field name="children_ids">
                            <record id="account_financial_report_sc_income0" model="account.report.line">
                                <field name="name">Operating Income</field>
                                <field name="code">OPINCSC</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="account_financial_report_sc_income0_balance" model="account.report.expression">
                                        <field name="label">second_currency_balance</field>
                                        <field name="engine">domain</field>
                                        <field name="formula" eval="[('account_id.account_type', '=', 'income')]"/>
                                        <field name="date_scope">normal</field>
                                        <field name="subformula">-sum</field>
                                    </record>
                                </field>
                            </record>
                            <record id="account_financial_report_sc_cost_sales0" model="account.report.line">
                                <field name="name">Cost of Revenue</field>
                                <field name="code">COSSC</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="expression_ids">
                                    <record id="account_financial_report_sc_cost_sales0_balance" model="account.report.expression">
                                        <field name="label">second_currency_balance</field>
                                        <field name="engine">domain</field>
                                        <field name="formula" eval="[('account_id.account_type', '=', 'expense_direct_cost')]"/>
                                        <field name="date_scope">normal</field>
                                        <field name="subformula">sum</field>
                                        <field name="green_on_positive" eval="False"/>
                                    </record>
                                </field>
                            </record>
                        </field>
                    </record>
                    <record id="account_financial_report_sc_other_income0" model="account.report.line">
                        <field name="name">Other Income</field>
                        <field name="code">OINSC</field>
                        <field name="groupby">account_id</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="account_financial_report_sc_other_income0_balance" model="account.report.expression">
                                <field name="label">second_currency_balance</field>
                                <field name="engine">domain</field>
                                <field name="formula" eval="[('account_id.account_type', '=', 'income_other')]"/>
                                <field name="date_scope">normal</field>
                                <field name="subformula">-sum</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="account_financial_report_sc_less_expenses0" model="account.report.line">
                <field name="name">Expenses</field>
                <field name="code">LEXSC</field>
                <field name="expression_ids">
                    <record id="account_financial_report_sc_less_expenses0_balance" model="account.report.expression">
                        <field name="label">second_currency_balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">EXPSC.second_currency_balance + DEPSC.second_currency_balance</field>
                        <field name="date_scope">normal</field>
                        <field name="green_on_positive" eval="False"/>
                    </record>
                </field>
                <field name="children_ids">
                    <record id="account_financial_report_sc_expense0" model="account.report.line">
                        <field name="name">Expenses</field>
                        <field name="code">EXPSC</field>
                        <field name="groupby">account_id</field>
                        <field name="foldable" eval="True"/>
                        <field name="expression_ids">
                            <record id="account_financial_report_sc_expense0_balance" model="account.report.expression">
                                <field name="label">second_currency_balance</field>
                                <field name="engine">domain</field>
                                <field name="formula" eval="[('account_id.account_type', '=', 'expense')]"/>
                                <field name="date_scope">normal</field>
                                <field name="subformula">sum</field>
                                <field name="green_on_positive" eval="False"/>
                            </record>
                        </field>
                    </record>
                    <record id="account_financial_report_sc_depreciation0" model="account.report.line">
                        <field name="name">Depreciation</field>
                        <field name="code">DEPSC</field>
                        <field name="groupby">account_id</field>
                        <field name="expression_ids">
                            <record id="account_financial_report_sc_depreciation0_balance" model="account.report.expression">
                                <field name="label">second_currency_balance</field>
                                <field name="engine">domain</field>
                                <field name="formula" eval="[('account_id.account_type', '=', 'expense_depreciation')]"/>
                                <field name="date_scope">normal</field>
                                <field name="subformula">sum</field>
                                <field name="green_on_positive" eval="False"/>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
        </field>
    </record>
</odoo>
