<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- customize payment views -->
        <record model="ir.ui.view" id="inherit_view_account_payment_form_payment_receipt_report">
            <field name="name">inherit.view.account.payment.form.payment.receipt.report</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="payment_type" position="after">
                    <field name="other"
                           attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('payment_type','!=','transfer')]}"/>
                </field>
                <button name="print_checks" position="replace"/>
                <button name="action_post" position="after">
                    <button name="check_clear" string="Check Cleared" type="object"
                            attrs="{'invisible':['|','|','|',('pdc','!=',True),('check_cleared','=',True),
                     ('check_bounced','=',True),('state','!=','posted')]}"/>
                    <button name="check_bounce" string="Check Bounced" type="object"
                            attrs="{'invisible':['|','|','|',('pdc','!=',True),('check_cleared','=',True),
                            ('check_bounced','=',True),('state','!=','posted')]}"/>
                </button>
                <field name="ref" position="after">
                    <field name="customer_vendor" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="analytic_account"
                           attrs="{'readonly':[('state','!=', 'draft')],
                                   }"
                           widget="selection"/>
                </field>
                <field name="journal_id" position="after">
                    <field name="journal_type" invisible="1"/>
                    <field name="check_journal_type" invisible="1"/>
                    <field name="from_account_id" attrs="{'readonly': [('state', '!=', 'draft')],
                           'invisible': [('other', '!=', True),('journal_type', '!=', 'general')]}"/>
                    <field name="pdc"
                           attrs="{'readonly': [('state', '!=', 'draft')],
                           'invisible': [('journal_type', 'not in', ('bank', 'general'))]}"/>
                    <field name="check_bank_journal"
                           attrs="{'invisible': ['|',('pdc', '!=', True),('journal_type', 'not in', ('bank', 'general'))]}"/>
                    <field name="check_no"
                           attrs="{'readonly': [('state', '!=', 'draft')],
                           'invisible': [('pdc', '!=', True)], 'required': [('pdc', '=', True)]}"/>
                    <field name="check_bank_name"
                           attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('pdc', '!=', True),('check_journal_type','=','osc')], 'required': [('payment_type', '=', 'inbound'),('pdc', '=', True)]}"/>
                    <field name="check_bank_branch"
                           attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('pdc', '!=', True),('check_journal_type','=','osc')]}"/>
                    <field name="check_due_date"
                           attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('pdc', '!=', True)],
                           'required': [('pdc','=',True)]}"/>
                    <field name="check_cleared" invisible="1"/>
                    <field name="check_bounced" invisible="1"/>
                </field>
                <field name="destination_journal_id" position="replace">
                    <field name="destination_journal_id" widget="selection"
                           attrs="{'required': [('payment_type', '=', 'transfer'),('other', '!=', True)], 'invisible': ['|',('payment_type', '!=', 'transfer'),('other', '=', True)], 'readonly': [('state', '!=', 'draft')]}"/>
                </field>
                <field name="destination_journal_id" position="after">
                    <field name="affect_account_id"
                           attrs="{'readonly': [('state','!=','draft')],  'invisible': [('other', '!=', True)]}"/>
                </field>
                <field name="payment_transaction_id" position="after">
                    <field name="clearance_id" context="{'form_view_ref':'account.view_move_form'}"/>
                    <field name="bounce_id"/>
                    <field name="batch_pdc_id"/>
                    <field name="so_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </field>
                <xpath expr="//div[hasclass('oe_chatter')]" position="replace">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_view_account_payment_invoice_form_payment_receipt_report">
            <field name="name">inherit.view.account.payment.invoice.form.payment.receipt.report</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <field name="communication" position="after">
                    <field name="customer_vendor"/>
                </field>
                <field name="journal_id" position="after">
                    <field name="journal_type" invisible="1"/>
                    <field name="pdc"
                           attrs="{'invisible': [('journal_type', '!=', 'bank')]}"/>
                    <field name="check_no"
                           attrs="{'invisible': [('pdc', '!=', True)], 'required': [('pdc', '=', True)]}"/>
                    <field name="check_bank_name"
                           attrs="{'invisible': [('pdc', '!=', True)]}"/>
                    <field name="check_bank_branch"
                           attrs="{'invisible': [('pdc', '!=', True)]}"/>
                    <field name="check_due_date"
                           attrs="{'invisible': [('pdc', '!=', True)],'required': [('pdc','=',True)]}"/>
                </field>
            </field>
        </record>

        <!-- customize payment views customized by account check printing -->
        <record model="ir.ui.view" id="inherit_view_account_payment_form_inherited_payment_receipt_report_2">
            <field name="name">inherit.view.account.payment.form.inherited.payment.receipt.report.2</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account_check_printing.view_account_payment_form_inherited"/>
            <field name="arch" type="xml">
                <field name="check_amount_in_words" position="replace">
                    <field name="check_amount_in_words"/>
                </field>
            </field>
        </record>

