<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_account_journal_form" model="ir.ui.view">
            <field name="name">inherit.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="check_journal_type" widget="radio"/>
                    <field name="bank_journal_id" attrs="{'invisible': [('check_journal_type','=','na')]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>